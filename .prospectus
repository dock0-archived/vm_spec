Prospectus.extra_dep('file', 'prospectus_travis')

require 'yaml'

item do
  noop

  deps do
    YAML.load(File.read('config.yaml'))['artifacts'].each do |artifact|
      aname, aversion = artifact.values_at('name', 'version')

      item do
        name aname

        expected do
          github_release
          repo "dock0/#{aname}"
        end

        actual do
          static
          set aversion
        end
      end
    end
  end

  extend ProspectusTravis::Build.new('dock0/vm_spec')
end
